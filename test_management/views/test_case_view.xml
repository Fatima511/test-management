<odoo>

    <!-- Search View for Test Cases -->
    <record id="test_case_view_search" model="ir.ui.view">
        <field name="name">test.case.view.search</field>
        <field name="model">test.case</field>
        <field name="arch" type="xml">
            <search string="Search Test Cases">
                <field name="ref"/>
                <field name="name"/>
                <field name="project_id"/>
                <field name="assigned_to" />
                <field name="create_uid" />
                <!-- Filters -->
                <filter string="My Test Cases" name="assigned" domain="['|',('assigned_to', '=', uid),('create_uid','=', uid)]"/>
                <filter string="Active" name="filter_active" domain="[('active', '=', True)]"/>
                <filter string="Inactive" name="filter_inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <!-- Group By Options -->
                <group expand="0" string="Group By">
                    <filter name="group_status" string="Status" domain="[]" context="{'group_by':'state'}"/>
                    <filter name="group_project" string="Project" domain="[]" context="{'group_by':'project_id'}"/>
                    <filter name="group_component" string="Component" domain="[]" context="{'group_by':'component_id'}"/>
                    <filter name="group_priority" string="Priority" domain="[]" context="{'group_by':'priority'}"/>

                </group>
            </search>
        </field>
    </record>
    <record id="test_case_view_kanban" model="ir.ui.view">
        <field name="name">test.case.kanban</field>
        <field name="model">test.case</field>
        <field name="arch" type="xml">
            <kanban
                default_group_by="state"
                class="o_kanban_small_column o_kanban_project_tasks"
                records_draggable="false"
                groups_draggable="false"
                quick_create="false"
                group_create="false"
                group_edit="false"
                group_delete="false"
                default_order = "state desc"
            >
                <field name="ref"/>
                <field name="name"/>
                <field name="assigned_to"/>
                <field name="create_uid"/>
                <field name="priority"/>
                <field name="state"/>
                <progressbar field="state" colors='{"1_done": "success-done", "1_canceled": "danger", "03_approved": "success", "02_changes_requested": "warning", "04_waiting_normal": "info", "01_in_progress": "200" }'/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top" t-att-class="['1_done', '1_canceled'].includes(record.state.raw_value) ? 'opacity-50' : ''">
                                    <div class="o_kanban_record_headings text-muted">
                                        <strong class="o_kanban_record_title">
                                                <field name="name"/>
                                        </strong>
                                        <span t-if="record.ref.raw_value" style="display: block; margin-top: 4px;">
                                            <field name="ref"/>
                                        </span>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body" t-att-class="['1_done', '1_canceled'].includes(record.state.raw_value) ? 'opacity-50' : 'text-muted'">

                                </div>
                                <div class="o_kanban_record_bottom" t-if="!selection_mode">
                                    <div class="oe_kanban_bottom_left" t-att-class="['1_done', '1_canceled'].includes(record.state.raw_value) ? 'opacity-50' : ''">
                                        <field name="priority" widget="priority" style="margin-right: 5px;"/>
                                        <field name="activity_ids" widget="kanban_activity" style="padding-top: 1.5px; margin-right: 2px"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right" t-if="!selection_mode">
                                        <div t-att-class="['1_done', '1_canceled'].includes(record.state.raw_value) ? 'opacity-50' : ''">
                                            <field name="assigned_to" widget="many2one_avatar_user"/>
                                            <field name="create_uid" widget="many2one_avatar_user"/>
                                        </div>
                                        
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
        <!-- Graph View for Test Case Execution Over Time -->
    <record id="view_test_case_execution_graph" model="ir.ui.view">
        <field name="name">test.case.execution.graph</field>
        <field name="model">test.case</field>
        <field name="arch" type="xml">
            <graph string="Test Case Execution Over Time" type="pie">
                <field name="state" string="State"/>
                <field name="id" sum="count"/>
            </graph>
        </field>
    </record>

    <!-- Pivot View for Test Case Analysis -->
    <record id="test_case_view_pivot" model="ir.ui.view">
        <field name="name">test.case.view.pivot</field>
        <field name="model">test.case</field>
        <field name="arch" type="xml">
            <pivot string="Test Case Analysis">
                <field name="state" type="col"/>
                <field name="project_id" type="row"/>
                <field name="name" type="row"/>
            </pivot>
        </field>
    </record>

    <!-- Tree View -->
    <record id="test_case_view_tree" model="ir.ui.view">
        <field name="name">test.case.tree</field>
        <field name="model">test.case</field>
        <field name="arch" type="xml">
            <tree decoration-info="state == 'draft'">
                <field name="ref"/>
                <field name="name"/>
                <field name="assigned_to" widget="many2one_avatar_user"/>
                <field name="create_uid" widget="many2one_avatar_user"/>
                <field name="create_date" optional="hidden"/>
                <field name="reviewed_by" optional="hidden" widget="many2one_avatar_user"/>
                <field name="review_date" optional="hidden"/>
                <field name="priority" widget="priority"/>
                <field name="activity_ids" widget="list_activity"/>
                <field name="project_id"/>
                <field name="component_id" optional="hidden"/>
                <field name="state"
                       decoration-danger="state == 'draft'"
                       decoration-warning="state == 'running'"
                       decoration-info="state == 'approved'"
                       decoration-muted="state == 'blocked'"
                       decoration-success="state == 'executed'"
                       widget="badge"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_test_case_form" model="ir.ui.view">
        <field name="name">test.case.form</field>
        <field name="model">test.case</field>
        <field name="arch" type="xml">
            <form>
                <!-- Header with State Transition Buttons -->
                <header>
                    <button name="to_review" string="To Review" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="approved" string="Approved" type="object" class="oe_highlight" invisible="state != 'ready'"/>
                    <button name="open_test_run_action" string="Run" type="object" class="oe_highlight" invisible="state != 'approved'"/>
                    <button name="to_draft" string="Set To Draft" type="object" invisible="state != 'ready'"/>
                    <button name="open_test_run_action" string="Re-run" type="object" invisible="state != 'executed'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,ready,approved,running"/>
                </header>
                <sheet>
                    <!-- Button Box for Related Bugs -->
                    <div class="oe_button_box" name="button_box">
                        <button name="view_related_runs_action" type="object" class="oe_stat_button"  icon="fa-list" invisible="run_count==0">
                            <field name="run_count" widget="statinfo" string="Runs" />
                        </button>
                        <button name="view_case_related_bugs_action" type="object" class="oe_stat_button"  icon="fa-bug" invisible="bug_count==0">
                            <field name="bug_count" widget="statinfo" string="Bugs" />
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <widget name="web_ribbon" title="Executed" bg_color="bg-success" 
				invisible="state != 'executed'"/>

                    <field name="active" invisible="1"/>
                    <div class="oe_title">
                        <h1><field name="ref"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="priority" readonly="state not in ['draft', 'ready']"/>
                            <field name="assigned_to" />
                        </group>
                        <group>
                            <field name="project_id" readonly="state not in ['draft', 'ready']" />
                            <field name="component_id" domain="[('project_id', '=', project_id)]"
					readonly="state not in ['draft', 'ready']"/>
                        </group>
                    </group>
                    <group>
                        <field name="test_data" readonly="state not in ['draft', 'ready']"/>
                        <field name="pre_action" readonly="state not in ['draft', 'ready']"/>
                    </group>
                    <group>
                        <field name="post_action" readonly="state not in ['draft', 'ready']"/>
                        <field name="environment" readonly="state not in ['draft', 'ready']"/>
                    </group>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                    <!-- Notebook for Steps, Info, and Test Runs -->
                    <notebook>
                        <page string="Steps">
                            <field name="test_case_steps" readonly="state not in ['draft', 'ready']">
                                <tree editable="bottom">
                                    <field name="num"/>
                                    <field name="action"/>
                                    <field name="expected_result"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Info">
                            <group>
                                <group>
                                    <field name="create_uid"/>
                                    <field name="reviewed_by" readonly="1"/>
                                </group>
                                <group>
                                    <field name="create_date"/>
                                    <field name="review_date" readonly="1"/>
                                </group>
                            </group>
                        </page>

                    </notebook>
                </sheet>
                <!-- Chatter for Messages and Activities -->
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="action_test_case" model="ir.actions.act_window">
        <field name="name">Test Cases</field>
        <field name="res_model">test.case</field>
        <field name="view_mode">tree,form,kanban,pivot,graph</field>
        <field name="context">{
                    'search_default_assigned':1,
                }
        </field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No test case found ! Let's create one
            </p>
        </field>
    </record>
</odoo>
