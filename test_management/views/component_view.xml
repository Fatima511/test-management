<odoo>
    <!-- Tree View -->
    <record id="view_component_tree" model="ir.ui.view">
        <field name="name">component.tree</field>
        <field name="model">component</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="project_id"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="component_search" model="ir.ui.view">
        <field name="name">component.search</field>
        <field name="model">component</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Search by Name"/>

                <!-- Filters -->
                <filter string="Active" name="filter_active" domain="[('active', '=', True)]"/>
                <filter string="Inactive" name="filter_inactive" domain="[('active', '=', False)]"/>

                <!-- Group By -->
                <group string="Group By">
                    <filter string="Project" name="group_by_project" context="{'group_by': 'project_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_component_form" model="ir.ui.view">
        <field name="name">component.form</field>
        <field name="model">component</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="project_id"/>
                        <field name="active" invisible="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_component" model="ir.actions.act_window">
        <field name="name">Components</field>
        <field name="res_model">component</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No component found! Let's create one.
            </p>
        </field>
    </record>
</odoo>
